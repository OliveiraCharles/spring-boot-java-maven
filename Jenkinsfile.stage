pipeline {
  environment {
    // dockerimage = "${image}"
  }
  agent any
  
  stages {
    stage('Prune Docker data') {
      steps {
        sh 'docker system prune -a --volumes -f'
      }
    }
  
    stage('Start container') {
      steps {
        sh 'docker-compose up -f ./docker-compose-staging -d --wait'
        sh 'docker-compose ps'
      }
    }
  
    stage('Run tests against the container') {
      steps {
        sh 'curl http://localhost:9090/alunos'
      }
    }
  }
  
}